<div class="container">
    <div class="row">
        <div class="col-4">
            <img class="single-shoe" src="/images/{{shoe.filename}}">
        </div>
        <div class="col-5 border rounded">
            <h2>{{shoe.name}}</h2>
            <p>Description: </br> </br>{{shoe.description}}</p>
        </div>
        <div class="col-3 border rounded">
            <h3>Select a size:</h3>
            <select class="form-select m-1 p-1 col-12" id="size" aria-label="Default select example">
                <option selected>Size</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
            </select>
            <ul>
                <li>Ships in 3-5 business days</li>
                <li>Satisfaction Guaranteed</li>
                <li>30-day returns with proof of purchase</li>
            </ul>
            <button class="btn btn-info" id="cart-button" type="button">Add to Cart</button>
        </div>
    </div>
</div>

<script src="/javascript/single-item.js"></script>